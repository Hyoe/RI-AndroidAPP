<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Name Here"
        android:id="@+id/businessName"
        android:textSize="40sp"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Phone Here"
        android:id="@+id/businessPhone"
        android:phoneNumber = "true"
        android:textSize="30sp"
        android:layout_below="@+id/businessAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Hours Here"
        android:id="@+id/businessHours"
        android:textSize="30sp"
        android:layout_below="@+id/businessURL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/businessURL"
        android:text="Business URL Here"
        android:linksClickable="false"
        android:textSize="30sp"
        android:layout_below="@+id/businessPhone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Materials Accepted:"
        android:id="@+id/textView5"
        android:layout_weight="0.08"
        android:textSize="30sp"
        android:layout_below="@+id/businessHours"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.example.jfransen44.recycleit.MultiSpinner
        android:id="@+id/simpleMultiSpinner"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:singleLine="false"
        android:spinnerMode="dialog"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Address Here"
        android:id="@+id/businessAddress"
        android:layout_below="@+id/businessName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp" />


</RelativeLayout>